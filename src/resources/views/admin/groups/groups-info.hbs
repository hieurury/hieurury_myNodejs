<div class="row">
    {{#with group}}
    <div class="col-6">
            <h3 class="card-title">{{name}}</h3>
            <img style="width: 100%" src="{{img}}" alt="...">
    </div>
    <div class="col-6">\
        <h3>Video hiện tại</h3>
        <div class="list-group">
        {{#each videos}}
            <a href="/groups/watch/{{../slug}}?idVideo={{this._id}}" class="list-group-item list-group-item-action">{{this.title}}</a>
        {{/each}}
        </div>
        <a href="/admin/groups/{{name}}/editVideo" style="width: 100%; margin-top: 12px" type="button" class="btn btn-primary btn-lg">Thêm video</a>
    </div>
    {{/with}}
</div>
