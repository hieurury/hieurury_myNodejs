 <div data-message="{{message}}" class="toast-block"></div>
<h1>Các tài liệu hiện có</h1>
<div class="row">
    <div class="col-9">
        <div class="row">
            {{#each groups}}
                <div  class="col-3 card" style="width: 18rem;">
                <img src="{{this.img}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/admin/groups/{{this.name}}" class="btn btn-primary">Xem</a>
                </div>
                </div>
            {{/each}}
        </div>
    </div>
    <div class="col-3">
        <a href="/admin/groups/create" class="btn btn-primary btn-lg btn-block">Tạo tài liệu mới</a>
        <a href="/admin/groups/edit" class="btn btn-secondary btn-lg btn-block">Chỉnh sửa tài liệu</a>
    </div>
</div>

<script src="/js/toastMessage.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        //xử lí toast-message
        const toastBlock = document.querySelector('.toast-block');
        const toastData = toastBlock.getAttribute('data-message');
        function show(value) {
            valueToast = {
                success: "Thành công",
                warning: "Cảnh báo",
                error: "Thất bại",
                info: "Tin nhắn"
            }
           let result = valueToast[value]
            toast({
            name: result,
            type: value,
            message: `Một tài liệu mới vừa được tạo ra`,  
            }, 3000)
        }

        if(toastBlock) {
            show(toastData);

        }
    })
</script>